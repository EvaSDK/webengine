# Configuration file for WebEngine.
# Made to be used along rxtxmanager, remove useless things when alone.

Alias /medias @webenginemediasdir@

<Directory @webenginemediasdir@>
        Options -Indexes
</Directory>

<IfModule mod_python.c>

        <Directory @webenginedir@>
                SetHandler python-program
                PythonHandler django.core.handlers.modpython
                SetEnv DJANGO_SETTINGS_MODULE webengine.settings
                PythonDebug On
                PythonPath "['@webenginedir@', '@webengineappdir@'] + sys.path"
        </Directory>

</IfModule>

<Directory @webenginemediasdir@>
	SetHandler None
</Directory>
